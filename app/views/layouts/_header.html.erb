<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("zilla.svg", size: "40x40", class: "img img-circle img-fluid header-logo"), root_path %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to content_tag(:span, " Home", :class => "fa fa-home"), root_path %>
        </li>
        <li>
          <%= link_to content_tag(:span, " About", class: "fa fa-file"), about_path %>
        </li>
        <% if logged_in? %>
          <li>
            <%= link_to content_tag(:span, " Community", class: "fa fa-users"), "#" %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b><span class="caret"></span></b>
            </a>
          <ul class="dropdown-menu dropdown-items">
            <li>
              <%= link_to content_tag(:span, " Profile", class: "fa fa-user-o"), current_user %>
            </li>
            <li>
              <%= link_to content_tag(:span, " Settings", class: "fa fa-cog"), "#" %></li>
            <li class="divider"></li>
            <li>
              <%= link_to content_tag(:span, " Log out", class: "fa fa-sign-out"), logout_path, method: :delete %>
            </li>
          </ul>
          </li>
        <% else %>
          <li><%= link_to content_tag(:span, " Log in", class: "fa fa-sign-in"), login_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>


