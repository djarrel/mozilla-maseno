<%= provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= link_to gravatar_for(@user), @user %>
      <h1><%= link_to @user.name, @user %></h1>
      <span>Engagements: <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% if @users.count > 10 %>
            <% @users.take(10).each do |user| %>
              <%= link_to gravatar_for(user, size: 30), user %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-6 col-offset-2">
    <h3><%= @title %></h3>
    </br>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>


