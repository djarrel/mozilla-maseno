<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Please correct the  <%= pluralize(@user.errors.count, "error") %> below.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
